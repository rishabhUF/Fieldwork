<div class="comment clearfix">
	<div class="comment_content">
		<p class="comment_name"><strong><%= floorplan.name %></strong></p>
		<p class="comment_body"><%= floorplan.blueprint %></p>
		<p class="comment_body"><%= floorplan.screenshot %></p>

		
		<p class="comment_time"><%= time_ago_in_words(floorplan.created_at) %> Ago</p>
	</div>
	<p> <%= link_to 'Delete', [floorplan.project, floorplan],
					method: :delete,
					class: 'button',
					data: {confirm: 'Are you sure'} %>
						
	</p>
</div>