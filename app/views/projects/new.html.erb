<div id="page_wrapper">
<%= form_for :project, url: projects_path do |f| %>
	<% if @project.errors.any? %>
		<div id="errors">
			<h2> <%= pluralize(@project.errors.count, "error") %> Prevented this post from saving </h2>
			<ul>
				<% @project.errors.full_messages.each do |msg| %>
					<li> <%= msg %> </li>
				<% end %>	
			</ul>
		</div>
	<% end %>
	<p>
	<%= f.label :title %><br>
	<%= f.text_field :title %>
	</p>

	<p>
	<%= f.label :body %><br>
	<%= f.text_area :body %>
	</p>

	<p>
	<%= f.submit %>
	</p>
<% end %>
</div>